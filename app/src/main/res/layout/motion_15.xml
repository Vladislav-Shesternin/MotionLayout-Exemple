<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout_15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layoutDescription="@xml/scene_15">

    <Button
        android:id="@+id/btn_15_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="256dp" />

    <TextView
        android:id="@+id/tv_15_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_15_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_15_1"
        app:layout_constraintStart_toEndOf="@+id/btn_15_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Текст привязан к кубу)"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_15_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="OnClick in code; \nOnSwipe in Transition;"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>